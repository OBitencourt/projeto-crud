<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head.ejs')  %>
</head>

<body>


    <h1><%= title %></h1>

    <h2>
    <% if (typeof message !== 'undefined') { %>
        <%= message %>
    <% } %>
    </h2>

    <form action="/edit/<%= user._id %>" method="post">
        <div>
            <label for="">Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label for="">Idade</label>
            <input type="text" name="age" placeholder="Digite a sua idade" value="<%= user.age %>">
        </div>
        <div>
            <label for="">E-mail</label>
            <input type="text" name="email" placeholder="Digite o seu e-mail" value="<%= user.email %>">
        </div>

        <button type="submit">Editar</button>
    </form>
    
    <%- include('partials/navbar.ejs')%>

    <%- include('partials/foot.ejs') %>
</body>
</html>